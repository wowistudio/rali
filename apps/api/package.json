{
  "name": "@repo/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --experimental-strip-types --watch src/index.ts",
    "dev:node": "node --experimental-strip-types --watch src/node.ts",
    "dev:worker": "tsx worker.ts",
    "dev:worker:e2e": "NODE_ENV=test tsx worker.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test vitest run --config tests/vitest.e2e.config.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./routers": {
      "types": "./src/routers/index.ts",
      "default": "./src/routers/index.ts"
    },
    "./contract": {
      "types": "./src/contract/index.ts",
      "default": "./src/contract/index.ts"
    }
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@orpc/contract": "^1.11.3",
    "@orpc/openapi": "^1.13.4",
    "@orpc/server": "^1.11.3",
    "@orpc/zod": "^1.13.4",
    "cacheable": "^2.3.2",
    "fastify": "^4.24.3",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.9.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  }
}